{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["../src/*", "../node_modules/*", "../../../node_modules/*"]
    },
    "rootDir": "../src",
    "allowJs": false,
    "checkJs": false,
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "noImplicitAny": true,
    "noEmit": true
  },
  "include": ["../src"],
  "exclude": ["../dist", "../node_modules", "../../../node_modules", "../test", "../**/*.spec.ts"]
}
