{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "node_modules/*", "../../node_modules/*"]
    },
    "rootDir": "src",
    "allowJs": false,
    "checkJs": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "noImplicitAny": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "../../node_modules", "test", "**/*.spec.ts"]
}
